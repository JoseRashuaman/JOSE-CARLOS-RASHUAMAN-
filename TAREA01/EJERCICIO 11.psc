Algoritmo INTERES_COMPUESTO
	Escribir "HALLAR EL VALOR DEL AREA Y DEL VOLUMEN DEL CILINDRO"
	
	Definir r,h,a,v Como Real
	
	//Datos de entrada:
	
	Escribir "EL VALOR DE LA RADIO"
	
	Leer r
	
	Escribir "EL VALOR DE LA ALTURA"
	
	Leer h
	
	//Procesos:
	a=2*pi*r*(r+h)
	v=pi*(r^2)*h
	
	//Datos de salida:
	Escribir "EL VALOR DEL AREA DEL CILINDRO ES: " ,a
	
	Escribir "EL VALOR DEL VOLUMEN DEL CILINDRO ES: " ,v
	
	
FinAlgoritmo
