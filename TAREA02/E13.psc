Algoritmo NOTAS_ESTUDIANTE
	Definir mt, p Como Real
	Escribir "NOTA ACTITUDINAL EQUIVALE 10%"
	Leer p1
	Escribir "NOTA COGNITIVA EQUIVALE 60%"
	Leer p2
	Escribir "NOTA DE INVESTIGACION EQUIVALE 30%"
	Leer p3
	
	NT = (p1*0.10)+(p2*0.60)+(p3*0.30)
	
	Escribir "LA NOTA EN TOTAL ES: ", NT
FinAlgoritmo
